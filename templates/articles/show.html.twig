{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <div class="container">
            <div class="mt-5">

                <h2 class= "text-center mb-4">{{article.title}} </h2>
                <p class="text-muted mb-4"> {{article.subTitle}} </p>
                <p> {{article.content}}  </p>
                <p> 
                    <strong>{{article.createdAt|date('d/m/y')}}  </strong> 
                    <a class="btn btn-primary float-right" href=" {{path('articles')}} ">Retour </a> 
                </p>

                <hr>
            </div>

    </div>
{% endblock %}
