{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <div class="container">

        {% for article in articles %}
            <div class="mt-5">

                <h2 class= "text-center mb-4">{{article.title}} </h2>
                <p class="text-muted mb-4"> {{article.subTitle}} </p>
                <p> {{article.content|u.truncate(800, '...')}}  </p>
                <p> <strong>{{article.createdAt|date('d/m/y')}}  </strong> 
                    <a class="btn btn-success float-right" href=" {{path('articles_show',{ id:article.id} )}} ">Lire la suite </a>
                 </p>
                
                <hr>
            </div>
            
        {% endfor %}
    </div>
{% endblock %}
